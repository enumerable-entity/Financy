pipeline{
        agent {
            label 'MasterNode'
        }
        options{
            buildDiscarder(logRotator(numToKeepStr: '3', artifactNumToKeepStr: '3'))
        }
        stages{
            stage("Compiling&Packaging"){
                steps { sh 'mvn package -Dmaven.test.skip=true'}
            }
            stage("Delivering artifact to AWS"){
                steps {
                    echo 'Delivering artifact to remote server...'
                    dir ('target') { sh 'scp financy-0.0.1-SNAPSHOT.jar ubuntu@enumerable-entity.link:/home/ubuntu/app' }
                }
            }
            stage("Deploying artifact"){
                 steps {
                     script {
                            echo 'Deploying...'
                            sshagent(credentials:['jenkinsAWSssh']){
                                sh """ ssh ubuntu@enumerable-entity.link << EOF
                                       docker restart SpringAppFinancy
                                       exit
                                       EOF
                                   """
                                }
                     }
                 }
            }
        }
}